<Reports>:
    name: 'report'

    BoxLayout:
        orientation: 'vertical'

        Screen:
            name: 'count_clients'

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.65}

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    size: 0, dp(48)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    MDLabel:
                        font_style:"Title"
                        theme_text_color: 'Secondary'
                        size_hint: None, None
                        size: dp(48)*3, dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        text: 'Отчеты'
                    MDSeparator:
                        height: dp(2)

                BoxLayout:
                    size_hint: 0.8, None
                    size: 0, dp(48)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDCheckbox:
                        id: date_switch
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.47}
                        active: True
                        on_release: app.click_date_switch()

                    MDLabel:
                        id: label_date
                        font_style:"Title"
                        theme_text_color: 'Primary'
                        size_hint: None, None
                        size: dp(48)*2, dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        text: 'Дата:'
                    BoxLayout:
                        border: True
                        MDLabel:
                            id: date_from
                            font_style: 'Headline'
                            theme_text_color: 'Primary'
                            size_hint: None, None
                            size: dp(48)*2.7, dp(48)
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            text: app.show_today()
                        MDIconButton:
                            icon: 'playlist-play'
                            size_hint: None, None
                            size: dp(48), dp(48)
                            pos_hint: {'center_y': 0.42}
                            on_release: app.show_date_from()
                    BoxLayout:
                        MDLabel:
                            id: date_to
                            font_style: 'Headline'
                            theme_text_color: 'Primary'
                            size_hint: None, None
                            size: dp(48)*2.7, dp(48)
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            text: app.show_next_day()
                            disabled: date_switch.active
                        MDIconButton:
                            icon: 'playlist-play'
                            pos_hint: {'center_y': 0.42}
                            on_release: app.show_date_to()
                            disabled: date_switch.active

                BoxLayout:
                    size_hint: 0.8, None
                    height: dp(48)*2
                    pos_hint: {'center_x': 0.5}
                    MDRaisedButton:
                        id: org1
                        text: "Выбрать организацию 1"
                        opposite_colors: True
                        size_hint: None, None
                        size: 5 * dp(48), dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                        on_release: app.select_org1()
                    Widget:
                        size_hint: None, None
                        size: dp(48), dp(48)
                    MDRaisedButton:
                        id: org2
                        text: "Выбрать организацию 2"
                        opposite_colors: True
                        size_hint: None, None
                        size: 5 * dp(48), dp(48)
                        pos_hint: {'right': 0.5, 'center_y': 0.6}
                        on_release: app.select_org2()

                BoxLayout:
                    size_hint: 0.8, None
                    size: 0, dp(48)
                    MDCheckbox:
                        id: 4444
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.47}
                        active: True
                        on_release: app.click_date_switch()
                    MDLabel:
                        font_style: 'Headline'
                        theme_text_color: 'Primary'
                        size_hint: 1, None
                        size: 0, dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        text: 'Финансовый отчет (Excel)'

                BoxLayout:
                    size_hint: 0.8, None
                    size: 0, dp(48)
                    MDCheckbox:
                        id: 3333
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.47}
                        active: True
                        on_release: app.click_date_switch()
                    MDLabel:
                        font_style: 'Headline'
                        theme_text_color: 'Primary'
                        size_hint: 1, None
                        size: 0, dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        text: 'Отчет по платежным агентам (Excel)'

                BoxLayout:
                    size_hint: 0.8, None
                    size: 0, dp(48)
                    MDCheckbox:
                        id: 2222
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.47}
                        active: True
                        on_release: app.click_date_switch()
                    MDLabel:
                        font_style: 'Headline'
                        theme_text_color: 'Primary'
                        size_hint: 1, None
                        size: 0, dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        text: 'Финансовый отчет (GoogleDocs)'

                BoxLayout:
                    size_hint: 0.8, None
                    size: 0, dp(48)
                    MDCheckbox:
                        id: 1111
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.47}
                        active: True
                        on_release: app.click_date_switch()
                    MDLabel:
                        font_style: 'Headline'
                        theme_text_color: 'Primary'
                        size_hint: 1, None
                        size: 0, dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        text: 'SMS-отчет в Telegram'

                BoxLayout:
                    size_hint: 0.8, None
                    size: 0, dp(48)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    MDRaisedButton:
                        text: "Сформировать отчеты"
                        opposite_colors: True
                        size_hint: None, None
                        size: 0, dp(48)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_release: app.run_report()

