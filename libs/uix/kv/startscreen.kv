<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(5)

            #Toolbar:
            #    id: action_bar
            #    background_color: app.theme_cls.primary_color
            #    title: app.title
            #    left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
            #    elevation: 10
            #    md_bg_color: app.theme_cls.primary_color

            Toolbar:
                id: action_bar
                title: app.title
                md_bg_color: app.theme_cls.primary_color
                background_color: app.theme_cls.primary_color
                background_palette: 'DeepPurple'
                background_hue: 'A400'
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10

            ScreenManager:
                id: manager

                BaseScreen:
                    id: base

                Reports:
                    id: report

                License:
                    id: license

                About:
                    id: about

